<UserControl x:Class="Server.Views.AgregarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Server.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="#F8F9FA">

    <Border BorderBrush="#DDDDDD" BorderThickness="1" Width="400"
            Margin="20" CornerRadius="10" Background="White"
            Padding="20" HorizontalAlignment="Center" VerticalAlignment="Center">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Pregunta -->
                <RowDefinition Height="Auto"/>
                <!-- Respuesta -->
                <RowDefinition Height="Auto"/>
                <!-- Tiempo -->
                <RowDefinition Height="Auto"/>
                <!-- Error -->
                <RowDefinition Height="Auto"/>
                <!-- Botones -->
            </Grid.RowDefinitions>

            <!-- Pregunta -->
            <StackPanel Grid.Row="0" Margin="0 10">
                <TextBlock Text="Pregunta:" FontSize="16" FontWeight="Bold" Margin="0 0 5 0"/>
                <TextBox FontSize="14" Padding="8" BorderBrush="#CCCCCC" 
                         BorderThickness="1" 
                         Text="{Binding QuizModel.Pregunta}"/>
            </StackPanel>

            <!-- Respuesta -->
            <StackPanel Grid.Row="1" Margin="0 10">
                <TextBlock Text="Respuesta:" FontSize="16" FontWeight="Bold" Margin="0 0 5 0"/>
                <ComboBox FontSize="14" SelectedValuePath="Tag" 
                          SelectedValue="{Binding QuizModel.Respuesta}" 
                          Padding="8" BorderBrush="#CCCCCC" BorderThickness="1">
                    <ComboBoxItem Content="Verdadero" Tag="True"/>
                    <ComboBoxItem Content="Falso" Tag="False"/>
                </ComboBox>
            </StackPanel>

            <!-- Tiempo -->
            <StackPanel Grid.Row="2" Margin="0 10">
                <TextBlock Text="Tiempo para responder (segundos):" FontSize="16" FontWeight="Bold" Margin="0 0 5 0"/>
                <TextBox Text="{Binding QuizModel.Tiempo}" FontSize="14" Padding="8" 
                         BorderBrush="#CCCCCC" BorderThickness="1"/>
            </StackPanel>

            <!-- Mensaje de error -->
            <TextBlock Grid.Row="3" Text="{Binding Error}" Foreground="Red" FontSize="14" Margin="0 5" 
                       HorizontalAlignment="Center" TextAlignment="Center"/>

            <!-- Botones -->
            <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10 0 0 0">
                <Button Content="Agregar" Command="{Binding AgregarCommand}" Width="100" Height="40"
                        Background="#007AFF" Foreground="White" FontSize="14" FontWeight="Bold"
                        BorderThickness="0" Cursor="Hand" Margin="5"/>

                <Button Content="Cerrar" Command="{Binding CancelarCommand}" Width="100" Height="40"
                        Background="#FF3B30" Foreground="White" FontSize="14" FontWeight="Bold"
                        BorderThickness="0" Cursor="Hand" Margin="5" />
            </StackPanel>
        </Grid>
    </Border>
</UserControl>

